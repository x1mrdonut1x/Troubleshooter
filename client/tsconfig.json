{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["./client", "./server"] // TODO fix this shit. for some reason ./server has no typechecking
}
