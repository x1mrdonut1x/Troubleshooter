{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "DOM", "scripthost"],
    "useDefineForClassFields": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts", "../engine/**/*.ts"],
  "exclude": ["node_modules"]
}
